template(name='header')
  header(class='header')
    div(class='container')
      div(class='row'): div(class='col col-12'
                            flex=''
                            flex-wrap='nowrap'
                            align-items='center'
                            justify-content='space-between')
        div(class='header-text')
          h1(class='page-title') ElegantThemes Documentation
          p(class='sub-title') Follow the instructions below to install and configure your new theme
        a(class='header-nav-toggle'
          href='#')
          i(class='icon_menu')

      div(class='row'): div(class='col col-12')
        div(class='header-search')
          form(flex=''
               flex-wrap='nowrap')
            input(class='input'
                  type='text'
                  placeholder='Search...')
            button(class='btn'): i(class='icon_search')